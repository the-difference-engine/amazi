<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['GMAPS_API_KEY']%>">
</script>

<div ng-controller="mapCtrl"  ng-init="setUp()" class="container-fluid" id="mapContainer">

	<div class="title">
		<h1><u>AMAZI</u></h1>
	</div>
	<div class="container-fluid" id="mapControls">
		<!-- Filter / Search / List -->
		<div class="row">
			<div class="col-xs-3">
				<div class="btn btn-default">
					Filter
				</div>
			</div>
			<div class="col-xs-6">
				<input type="text" class="form-control" placeholder="Search">
			</div>
			<div class="col-xs-3">
				<a class="btn btn-default" href="/locations">
					List
				</a>
			</div>
		</div>
	<row>
		<div class="row homepage-buttons">
			<div class="filter-buttons">
				<div class="btn btn-default">
					Open Now
				</div>
				<div class="btn btn-default">
					Filtered
				</div>
				<div class="btn btn-default">
					Tap
				</div>
				<div class="btn btn-default">
					Natural Sources
				</div>
				<input type="checkbox" ng-model="filterer" ng-checked="alert ('hi'); filterByWaterType('filtered')">
			</div>
		</div>
	</div>

	<div id="mapView">
	</div>
</div>
