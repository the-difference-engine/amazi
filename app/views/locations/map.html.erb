<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['GMAPS_API_KEY']%>">
</script>

<div ng-controller="mapCtrl"  ng-init="setUp()" class="container-fluid" id="mapContainer">

	<div class="title">
		<h1><u>AMAZI</u></h1>
	</div>
	<div class="container-fluid" id="mapControls">
		<!-- Filter / Search / List -->
		<div class="row">
			<div class="col-xs-3">
				<div class="btn btn-default">
					Filter
				</div>
			</div>
			<div class="col-xs-6">
				<input type="text" class="form-control" placeholder="Search">
			</div>
			<div class="col-xs-3">
				<a class="btn btn-default" href="/locations">
					List
				</a>
			</div>
		</div>

		<div class="row homepage-buttons">
			<div class="filter-buttons">
				<div class="btn btn-default">
					Open Now
				</div>
				<% @water_types.each do |water_type| %>
					<div class="btn btn-default" ng-click="filterByWaterType('<%=water_type.id%>')">
						<%= water_type.name.capitalize %>
					</div>
				<% end %>
				<div class="btn btn-default" ng-click="filterByWaterType('')">
					Reset
				</div>
			</div>
		</div>
	</div>


		<div id="mapView">
		</div>

